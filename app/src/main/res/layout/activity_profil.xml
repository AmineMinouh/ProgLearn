<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amine.proglearn.profil">

    <ImageView
        android:id="@+id/bgapp"
        android:layout_width="550dp"
        android:layout_height="210dp"

        android:scaleType="fitXY"
        android:src="@drawable/bgapp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/clover"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginRight="230dp"
        android:elevation="6dp"
        android:src="@drawable/clover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <LinearLayout

        android:id="@+id/textsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:elevation="6dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:layout_marginBottom="25dp"
            android:textColor="#FFF"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="30dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >



            <TextView
                android:id="@+id/nom"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:ems="10"
                android:background="@drawable/edit_rond"
                android:hint="Nom"
                android:layout_marginLeft="18dp"

                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress" />



            <TextView
                android:id="@+id/prenom"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:ems="10"
                android:background="@drawable/edit_rond"
                android:hint="Prenom"
                android:layout_marginLeft="18dp"

                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress" />









            <Button
                android:id="@+id/annuler"
                android:layout_width="100dp"
                android:background="@drawable/edit_button"
                android:layout_height="wrap_content"
                android:textAllCaps="false"

                android:text="@string/ct21"
                android:textColor="#fff"
                android:onClick="deconxion"
                android:layout_margin="50dp"
                />


        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
